{% extends 'base.html.twig' %}

{% block title %}Detalle Usuario{% endblock %}

{% block body %}

    <div class="container py-5">

        <div class="row justify-content-center">
            <div class="col-lg-7">

                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">

                        <h2 class="mb-4 fw-light">Detalle del usuario</h2>

                        <div class="mb-3">
                            <small class="text-muted">ID</small>
                            <div class="fs-5">{{ user.id }}</div>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">Email</small>
                            <div class="fs-5">{{ user.email }}</div>
                        </div>

                        <div class="mb-4">
                            <small class="text-muted">Rol</small>
                            <div class="mt-2">
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-dark px-3 py-2">Administrador</span>
                                {% else %}
                                    <span class="badge bg-secondary px-3 py-2">Usuario</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">

                            <a href="{{ path('app_user_index') }}"
                               class="text-decoration-none text-muted">
                                ‚Üê Volver
                            </a>

                            <div>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                                   class="btn btn-outline-dark me-2">
                                    Editar
                                </a>

                                {{ include('user/_delete_form.html.twig') }}
                            </div>

                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>

{% endblock %}
