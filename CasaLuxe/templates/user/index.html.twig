{% extends 'base.html.twig' %}

{% block title %}Gestión de Usuarios{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/user.css') }}">
{% endblock %}

{% block body_class %}user-page{% endblock %}

{% block body %}

    <div class="container py-5">

        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>


                <h2 class="admin-title">Usuarios</h2>
                <p class="admin-subtitle">Gestión interna de la intranet</p>
                <a href="../project" class="user-link">Gestion de proyectos</a>
                <a href="/logout" class="user-link">Cerrar sesión</a>
                <a href="http://localhost:4200" class="user-link">Volver al Indice</a>
            </div>

            <a href="{{ path('app_user_new') }}" class="btn btn-admin">
                + Nuevo Usuario
            </a>
        </div>

        <div class="admin-card">

            <table class="table align-middle mb-0">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th class="text-end">Acciones</th>
                </tr>
                </thead>

                <tbody>
                {% for user in users %}
                    <tr>
                        <td class="text-muted">{{ user.id }}</td>

                        <td>
                            <strong>{{ user.email }}</strong>
                        </td>

                        <td>
                            {% if 'ROLE_ADMIN' in user.roles %}
                                <span class="badge badge-admin">Administrador</span>
                            {% else %}
                                <span class="badge badge-user">Usuario</span>
                            {% endif %}
                        </td>

                        <td class="text-end">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}"
                               class="btn btn-sm btn-outline-elegant">
                                Ver
                            </a>

                            <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                               class="btn btn-sm btn-dark-elegant">
                                Editar
                            </a>
                        </td>
                    </tr>

                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            No hay usuarios registrados
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>

    </div>

{% endblock %}
