{% extends 'base.html.twig' %}

{% block title %}Gestión de Proyectos{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/projects.css') }}">
{% endblock %}

{% block body_class %}project-page{% endblock %}

{% block body %}

    <div class="container py-5">

        <h2 class="project-title">Proyectos</h2>
        <p class="project-subtitle">Gestión interna de la intranet</p>

        <a href="{{ path('app_user_index') }}" class="project-link">
            Gestión de usuarios
        </a>

        <div class="project-card mt-4">

            <table class="table align-middle mb-0">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Descripción</th>
                    <th>Imagen</th>
                    <th>PDF</th>
                    <th>Usuario</th>
                    <th>Ubicación</th>
                    <th>Año</th>
                    <th class="text-end">Acciones</th>
                </tr>
                </thead>

                <tbody>
                {% for project in projects %}
                    <tr>
                        <td class="text-muted">{{ project.id }}</td>

                        <td><strong>{{ project.title }}</strong></td>

                        <td>{{ project.description }}</td>

                        <td>
                            {% if project.image %}
                                <img src="{{ asset('uploads/' ~ project.image) }}" class="project-img">
                            {% endif %}
                        </td>

                        <td>
                            {% if project.pdfPath %}
                                <a href="{{ asset('uploads/' ~ project.pdfPath) }}"
                                   target="_blank"
                                   class="btn btn-sm btn-outline-project">
                                    Ver PDF
                                </a>
                            {% endif %}
                        </td>

                        <td>
                            {{ project.user.name }}
                        </td>
                        <td>
                            {{ project.location }}
                        </td>
                        <td>
                            {{ project.year }}
                        </td>

                        <td class="text-end">
                            <a href="{{ path('app_project_show', {'id': project.id}) }}"
                               class="btn btn-sm btn-outline-project">
                                Ver
                            </a>

                            <a href="{{ path('app_project_edit', {'id': project.id}) }}"
                               class="btn btn-sm btn-dark-project">
                                Editar
                            </a>
                        </td>
                    </tr>

                {% else %}
                    <tr>
                        <td colspan="7" class="text-center py-5 text-muted">
                            No hay proyectos registrados
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>

        <div class="mt-4">
            <a href="{{ path('app_project_new') }}" class="btn btn-project">
                + Nuevo Proyecto
            </a>
        </div>

    </div>

{% endblock %}
