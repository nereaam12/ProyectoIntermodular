{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <div class="project-page py-5">
        <div class="container">

            <!-- TÃTULO -->
            <div class="mb-4">
                <h1 class="project-title text-uppercase">{{ project.title }}</h1>
                <p class="project-subtitle text-uppercase">Project details</p>
            </div>

            <!-- CARD -->
            <div class="project-card">

                <table class="table align-middle">
                    <tbody>
                    <tr>
                        <th class="project-subtitle text-uppercase">Id</th>
                        <td>{{ project.id }}</td>
                    </tr>
                    <tr>
                        <th class="project-subtitle text-uppercase">Title</th>
                        <td>{{ project.title }}</td>
                    </tr>
                    <tr>
                        <th class="project-subtitle text-uppercase">Description</th>
                        <td>{{ project.description }}</td>
                    </tr>
                    <tr>
                        <th class="project-subtitle text-uppercase">Image</th>
                        <td>
                            {% if project.image %}
                                <img src="{{ asset('uploads/' ~ project.image) }}"
                                     alt="{{ project.title }}"
                                     class="project-img">
                            {% else %}
                                <span class="text-muted">No image</span>
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>

                <!-- BOTONES -->
                <div class="d-flex justify-content-between mt-4">

                    <a href="{{ path('app_project_index') }}"
                       class="btn btn-outline-project text-uppercase">
                        Back to list
                    </a>

                    <div class="d-flex gap-2">
                        <a href="{{ path('app_project_edit', {'id': project.id}) }}"
                           class="btn btn-project text-uppercase">
                            Edit
                        </a>

                        {{ include('project/_delete_form.html.twig') }}
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}
