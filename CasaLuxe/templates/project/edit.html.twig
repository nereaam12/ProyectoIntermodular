{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block body %}
    <div class="project-page py-5">
        <div class="container">

            <div class="mb-4">
                <h1 class="project-title text-uppercase">Edit Project</h1>
                <p class="project-subtitle text-uppercase">Modify project information</p>
            </div>

            <div class="project-card">

                {{ include('project/_form.html.twig', {'button_label': 'Update'}) }}

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_project_index') }}"
                       class="btn btn-outline-project text-uppercase">
                        Back to list
                    </a>

                    {{ include('project/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
